<h2>Avatar: </h2>
<% if current_user.provider == nil %>
  <p><%= image_tag @me.avatar.url(:small) %></p>
<% else %>
  <%= image_tag current_user.image %>
<% end %>

<h2>Email: </h2>
<p><%= @me.email %></p>

<h2>Username: </h2>
<% if current_user.provider == nil %>
  <p><%= @me.username %></p>
<% else %>
  <%= current_user.name %>
<% end %>

<h2>Creato: </h2>
<p><%= @me.created_at %></p>

