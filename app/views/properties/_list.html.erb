<% @properties.each do |p| %>
  <hr>
    <b>Anteprima:</b>
    <br>
    <% if p.img1.present? %>
      <%= image_tag p.img1.url(:thumb) %><br>
    <% else %>
      <%= image_tag(image_path("default_local.jpg"), size: "80x80") %><br>
    <% end %>
    <b>Titolo:</b> <%= p.title %><br>

    <% if p.offer == nil %>
      <b><%= p.price %></b>€<br>
    <%else %>
      <b><del><%= p.price %>€</del> <font color="red"><%= p.offer %>€ </font></b><br>
    <%end%>

    <b>Città:</b> <%= p.city %><br/>
    <b>Utente:</b>
    <%= p.user.username %>
    <br>

    <%= link_to "Vedi", property_path(p), :class => 'btn btn-success' %>
<% end %>

<%= paginate @properties %>
